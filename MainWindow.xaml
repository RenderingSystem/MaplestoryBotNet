<Window x:Class="MaplestoryBotNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaplestoryBotNet"
        mc:Ignorable="d"
        Title="Microsoft Teams" Height="600" Width="800" Background="Black"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem x:Name="ExitMenuItem" Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Ailments"/>
                <MenuItem Header="Auto-potion"/>
                <MenuItem Header="Petfood"/>
                <MenuItem Header="Skills"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem x:Name="SnapshotsMenuItem" Header="Snapshots" IsCheckable="True"/>
                <MenuItem x:Name="MinimapMenuItem" Header="Minimap" IsCheckable="True"/>
                <MenuItem x:Name="NCCMenuItem" Header="NCC" IsCheckable="True"/>
            </MenuItem>
        </Menu>
        <Grid Height="600" Width="800">
            <Image x:Name="ImageView"  HorizontalAlignment="Center"  VerticalAlignment="Center"  Stretch="Uniform"/>
        </Grid>
    </DockPanel>
</Window>

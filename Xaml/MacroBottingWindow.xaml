<Window
    x:Class="MaplestoryBotNet.Xaml.MacroBottingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaplestoryBotNet"
    mc:Ignorable="d"
    Title="Macro Window" 
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Width="700"
    Height="600"
    Topmost="True"
    Background="Black"
>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Xaml/Resources/ComboBoxResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Grid Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="525"/>
                <ColumnDefinition Width="175"/>
            </Grid.ColumnDefinitions>
            <ListBox
                x:Name="MacroListBox"
                HorizontalAlignment="Left"
                Height="525"
                Margin="10,30,0,15"
                Width="500"
                Background="Black"
                Foreground="White"
                FontFamily="Courier New"
                SelectedIndex="0"
            >
                <ComboBox
                    x:Name="ComboBoxTemplate"
                    Width="475"
                    IsEditable="True"
                    FontSize="10"
                >
                    <ComboBoxItem Content="Wait {#} {#}"/>
                    <ComboBoxItem Content="Key press {{key}, ...} {#} {#}"/>
                    <ComboBoxItem Content="Key down {key}"/>
                    <ComboBoxItem Content="Key up {key}"/>
                </ComboBox>
            </ListBox>
            <Label
                Content="Macro Commands"
                HorizontalAlignment="Left"
                Margin="10,2,0,0"
                VerticalAlignment="Top"
                Foreground="White"
                Width="205"
                FontFamily="Courier New"
            />
            <Button
                x:Name="StartButton"
                Content="Start!"
                HorizontalAlignment="Left"
                Margin="10,500,15,0"
                VerticalAlignment="Top"
                Height="25"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="Lime"
                Grid.Column="3"
            />
            <Button x:Name="SaveButton"
                Content="Save"
                HorizontalAlignment="Left"
                Margin="10,34,15,0"
                VerticalAlignment="Top"
                Height="25"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="#FF707070"
                Grid.Column="3"
            />
            <Button x:Name="LoadButton"
                Content="Load"
                HorizontalAlignment="Left"
                Margin="10,64 15,0"
                VerticalAlignment="Top"
                Height="25"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="#FF707070"
                Grid.Column="3"
            />
            <Button x:Name="AddButton"
                Content="Add"
                HorizontalAlignment="Left"
                Margin="10,121,15,0"
                VerticalAlignment="Top"
                Height="26"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="#FF707070"
                Grid.Column="3"
            />
            <Button
                x:Name="RemoveButton"
                Content="Remove"
                HorizontalAlignment="Left"
                Margin="10,152,15,0"
                VerticalAlignment="Top"
                Height="26"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="#FF707070"
                Grid.Column="3"
            />
            <Button
                x:Name="ClearButton"
                Content="Clear"
                HorizontalAlignment="Left"
                Margin="10,183,0,0"
                VerticalAlignment="Top"
                Height="26"
                Width="130"
                FontFamily="Courier New"
                Foreground="White"
                Background="Black"
                BorderBrush="#FF707070"
                Grid.Column="3"
            />
        </Grid>
    </Viewbox>
</Window>

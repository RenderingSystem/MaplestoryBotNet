<Window 
    x:Class="MaplestoryBotNet.Xaml.MapWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaplestoryBotNet.Xaml"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Title="Map"
    Width="600"
    Height="400"
    Background="Black"
>
    <Viewbox Stretch="Fill">
        <Grid Background="Black" Height="380" Width="575" >
            <Border 
                Width="400"
                Height="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Black"
                BorderBrush="White"
                BorderThickness="1,1,1,1"
            />
            <Image
                x:Name="MapImage"
                Width="400"
                Height="350"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
            />
            <Canvas
                x:Name="MapCanvas"
                Width="400"
                Height="350"
                Background="Transparent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsHitTestVisible="True"
                Visibility="Visible"
            />
            <ToggleButton
                x:Name="AddButton"
                FontFamily="Courier New"
                Content="Add point"
                HorizontalAlignment="Left"
                Margin="0,355,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="130"
                IsTabStop="False"
            />
            <ToggleButton
                x:Name="RemoveButton"
                FontFamily="Courier New"
                Content="Remove point"
                HorizontalAlignment="Left"
                Margin="135,355,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="130"
                IsTabStop="False"
            />
            <Button
                x:Name="EditButton"
                FontFamily="Courier New"
                Content="Edit point"
                HorizontalAlignment="Left"
                Margin="270,355,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                IsEnabled="False"
                Width="130"
                IsTabStop="False"
            >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="Black"
                            BorderBrush="White"
                            BorderThickness="1"
                        >
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                RecognizesAccessKey="True"
                            />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="BorderBrush" Value="Gray"/>
                                <Setter TargetName="border" Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="LightSkyBlue"/>
                                <Setter TargetName="border" Property="Background" Value="#BEE6FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                x:Name="SaveButton"
                FontFamily="Courier New"
                Content="Save"
                HorizontalAlignment="Left"
                Margin="412,330,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="155"
                IsTabStop="False"
            />
            <Button
                x:Name="LoadButton"
                FontFamily="Courier New"
                Content="Load"
                HorizontalAlignment="Left"
                Margin="412,355,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="155"
                IsTabStop="False"
            />
            <Label
                Content="Selected point:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="404,120,0,0"
                VerticalAlignment="Top"
                Width="180"
                Foreground="White"
                FontSize="10"
            />
            <Label
                Content="Location:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="405,163,0,0"
                VerticalAlignment="Top"
                Width="64"
                Foreground="White"
                FontSize="10"
            />
            <Label
                Content="Map Area:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="405,10,0,0"
                VerticalAlignment="Top"
                Width="69"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Left:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,31,0,0"
                VerticalAlignment="Top"
                Width="41"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Top:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,52,0,0"
                VerticalAlignment="Top"
                Width="41"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Right:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,73,0,0"
                VerticalAlignment="Top"
                Width="47"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Bottom:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,94,0,0"
                VerticalAlignment="Top"
                Width="52"
                FontSize="10"
                Foreground="White"
                RenderTransformOrigin="0.509,1.614"
            />
            <TextBox
                x:Name="MapAreaBottomTextBox"
                Margin="464,96,10,265"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyBottom, UpdateSourceTrigger=LostFocus}" 
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="3"
            />
            <TextBox
                x:Name="MapAreaRightTextBox"
                Margin="464,75,10,285"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyRight, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="2"
            />
            <TextBox
                x:Name="MapAreaTopTextBox"
                Margin="464,53,10,307"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyTop, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="1"
            />
            <TextBox
                x:Name="MapAreaLeftTextBox"
                Margin="464,31,10,328"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyLeft, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="0"
            />
            <TextBox
                x:Name="LocationTextBoxX"
                Margin="464,188,10,173"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyX, UpdateSourceTrigger=LostFocus}" 
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="5"
            />
            <Label
                Content="X:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,187,0,0"
                VerticalAlignment="Top"
                Width="24"
                FontSize="10"
                Foreground="White"
            />
            <TextBox
                x:Name="LocationTextBoxY"
                Margin="464,208,10,153"
                Background="Black"
                Foreground="Lime"
                FontFamily="Courier New"
                Text="{Binding NumericPropertyY, UpdateSourceTrigger=LostFocus}" 
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="6"
            />
            <Label
                Content="Y:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,207,0,0"
                VerticalAlignment="Top"
                Width="24"
                FontSize="10"
                Foreground="White"
            />
            <TextBox
                x:Name="LabelTextBox"
                Margin="464,143,10,218"
                Background="Black"
                Foreground="LightYellow"
                FontFamily="Courier New"
                TabIndex="4"
                IsReadOnly="True"
            />
            <Label
                Content="Label:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,141,0,0"
                VerticalAlignment="Top"
                Width="45"
                FontSize="10"
                Foreground="White"
                RenderTransformOrigin="0.509,1.614"
            />
        </Grid>
    </Viewbox>
</Window>

<Window 
    x:Class="MaplestoryBotNet.Xaml.MapWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaplestoryBotNet.Xaml"
    xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Title="Map"
    Height="350"
    Width="500"
    Background="Black"
>
    <Viewbox Stretch="Fill">
        <Grid Background="Black" >
            <Border 
                Width="400"
                HorizontalAlignment="Left"
                Background="Black"
                BorderBrush="White"
                BorderThickness="1,1,1,1"
            >
                <Image
                    x:Name="MapImage"
                    Width="400"
                    HorizontalAlignment="Left"
                />
            </Border>
            <Button
                x:Name="AddButton"
                FontFamily="Courier New"
                Content="Add"
                HorizontalAlignment="Left"
                Margin="411,188,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="162"
                IsTabStop="False"
            />
            <Button
                x:Name="RemoveButton"
                FontFamily="Courier New"
                Content="Remove"
                HorizontalAlignment="Left"
                Margin="411,213,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="162"
                IsTabStop="False"
            />
            <Button
                x:Name="EditButton"
                FontFamily="Courier New"
                Content="Edit"
                HorizontalAlignment="Left"
                Margin="411,238,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="162"
                IsTabStop="False"
            />
            <Button
                x:Name="SaveButton"
                FontFamily="Courier New"
                Content="Save"
                HorizontalAlignment="Left"
                Margin="411,282,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="162"
                IsTabStop="False"
            />
            <Button
                x:Name="LoadButton"
                FontFamily="Courier New"
                Content="Load"
                HorizontalAlignment="Left"
                Margin="411,307,0,0"
                Padding="2,2,2,2"
                VerticalAlignment="Top"
                Foreground="White"
                Background="Black"
                BorderBrush="White"
                Width="162"
                IsTabStop="False"
            />
            <Label
                Content="Selected point:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="404,120,0,0"
                VerticalAlignment="Top"
                Width="180"
                Foreground="White"
                FontSize="10"
            />
            <Label
                Content="Name:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,141,0,0"
                VerticalAlignment="Top"
                Width="41"
                Foreground="White"
                FontSize="10"
            />
            <Label
                x:Name="SelectedMacroName"
                Content="Lorem Ipsum"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="454,141,0,0"
                VerticalAlignment="Top"
                Width="96"
                Foreground="Lime"
                FontSize="10"
            />
            <Label
                Content="Location:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,162,0,0"
                VerticalAlignment="Top"
                Width="64"
                Foreground="White"
                FontSize="10"
            />
            <Label
                x:Name="SelectedMacroLocation"
                Content="xxxx, yyyy"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="481,162,0,0"
                VerticalAlignment="Top"
                Width="91"
                Foreground="Lime"
                FontSize="10"
            />
            <Label
                Content="Map Area:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="405,10,0,0"
                VerticalAlignment="Top"
                Width="69"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Left:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,31,0,0"
                VerticalAlignment="Top"
                Width="41"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Top:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,52,0,0"
                VerticalAlignment="Top"
                Width="41"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Right:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,73,0,0"
                VerticalAlignment="Top"
                Width="47"
                FontSize="10"
                Foreground="White"
            />
            <Label
                Content="Bottom:"
                FontFamily="Courier New"
                HorizontalAlignment="Left"
                Margin="412,94,0,0"
                VerticalAlignment="Top"
                Width="52"
                FontSize="10"
                Foreground="White"
                RenderTransformOrigin="0.509,1.614"
            />
            <TextBox
                Margin="464,96,10,221"
                Background="Black"
                Foreground="Lime"
                Text="{Binding NumericPropertyBottom, UpdateSourceTrigger=LostFocus}" 
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="3"
            />
            <TextBox
                Margin="464,76,10,240"
                Background="Black"
                Foreground="Lime"
                Text="{Binding NumericPropertyRight, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="2"
            />
            <TextBox
                Margin="464,53,10,261"
                Background="Black"
                Foreground="Lime"
                Text="{Binding NumericPropertyTop, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="1"
            />
            <TextBox
                Margin="464,31,10,284"
                Background="Black"
                Foreground="Lime"
                Text="{Binding NumericPropertyLeft, UpdateSourceTrigger=LostFocus}"
                PreviewTextInput="NumberValidationTextBox"
                DataObject.Pasting="NumberValidationPasting"
                TabIndex="0"
            />
        </Grid>
    </Viewbox>
</Window>
